<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.usuario.seguridadvehicular.Menu">

    <Button
        android:id="@+id/Vehiculo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iconocar"
        android:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/EmergenciaM"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/Vehiculo"
        android:layout_below="@+id/textView"
        android:layout_marginTop="48dp"
        android:background="@drawable/iconogps"
        android:backgroundTint="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/Conectar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/EmergenciaM"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="41dp"
        android:background="@drawable/iconobt2"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="Conectar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Vehiculo"
        android:layout_centerHorizontal="true"
        android:text="Vehiculo"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EmergenciaM"
        android:layout_centerHorizontal="true"
        android:text="Emergencia"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Conectar"
        android:layout_centerHorizontal="true"
        android:text="Conectar"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_dark"
        android:text="Control Vehicular."
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
